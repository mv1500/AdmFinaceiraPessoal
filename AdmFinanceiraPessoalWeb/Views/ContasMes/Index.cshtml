
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div ng-app="IAdmFin" ng-controller="ContaController" ng-cloak>
    <div class="row">

        <div class="panel panel-default">
            <div class="panel-body">
                <table datatable="ng" class="table table-striped table-hover table-sm">
                    <thead>
                        <tr>
                            <th>Descrição</th>
                            <th class="col-lg-1">Data Pagamento</th>
                            <th class="col-lg-1">Valor</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in viewdata.contas">
                            <td>{{item.Descricao}}</td>
                            <td class="col-lg-1">{{item.DataPagamento | dateFilter| date:"dd/MM/yyyy"}}</td>
                            <td class="col-lg-1">{{item.Valor}}</td>
                            <td class="col-lg-2">
                                <button type="button" class="btn btn-primary btn-xs" ng-click="editarPag(item)">
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </button>
                                <button type="button" class="btn btn-danger btn-xs" ng-click="excluirPagamento(item)">
                                    <span class="glyphicon glyphicon-remove"></span>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/contaMes")
}