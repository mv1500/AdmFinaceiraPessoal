
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div ng-app="IAdmFin" ng-controller="ContaController" ng-cloak>
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading" style="text-align:center">
                <h3 style="text-align:center"><b>{{viewdata.titulo}}</b></h3>
            </div>
            <button class="btn btn-info btn-sm" ng-click="modalCadastrarConta()" accesskey="C">Cadastrar Conta</button>

        </div>

        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-striped table-hover table-sm">
                    <thead>
                        <tr>
                            <th class="col-lg-3">Descrição</th>
                            <th class="col-lg-1">Data Pagamento</th>
                            <th class="col-lg-1">Valor</th>
                            <th class="col-lg-1">Periodicidade</th>
                            <th class="col-lg-1">Status</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in viewdata.contas | orderBy:'DataPagamento'">
                            <td>{{item.Descricao}}</td>
                            <td class="col-lg-1">{{item.DataPagamento | dateFilter| date:"dd/MM/yyyy"}}</td>
                            <td class="col-lg-1">{{item.Valor}}</td>
                            <td class="col-lg-1">{{item.Periodicidade}}</td>
                            <td class="col-lg-1">{{item.Status}}</td>
                            <td class="col-lg-2">
                                <button type="button" class="btn btn-success btn-xs" ng-show="item.Status != 'Paga'" ng-click="modalCadastrarPagamento(item)">
                                    <span class="glyphicon glyphicon-usd">Pagar</span>
                                </button>
                                <button type="button" class="btn btn-primary btn-xs" ng-click="editarCon(item)">
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </button>
                                <button type="button" class="btn btn-danger btn-xs" ng-click="excluirConta(item)">
                                    <span class="glyphicon glyphicon-remove"></span>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    @Html.Partial("_CadContaMes")
    @Html.Partial("_CadPagamentoMes")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/contaMes")
}