
@{
    ViewBag.Title = "_CadContaMes";
}

<div class="modal fade" id="formCadConta">
    <div class="modal-dialog">
        <div class="modal-content">
            <form name="cadConta" ng-validate="{}">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Cadastro de Contas do Mês</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-sm-6 col-md-6 col-lg-6">
                            <label>Descrição</label>
                            <input type="text" class="form-control required" name="Descricao" ng-model="viewdata.conta.Descricao" />
                        </div>
                        <div class="form-group col-sm-6 col-md-6 col-lg-6">
                            <label>Valor</label>
                            <input type="number" step="0.01" class="form-control required" name="Valor" ng-model="viewdata.conta.Valor" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-6 col-md-6 col-lg-6">
                            <label>Data de Pagamento</label>
                            <input type="date" class="form-control required" name="DataPagamento" ng-model="viewdata.conta.DataPagamento" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-6 col-md-6 col-lg-6">
                            <label>Dono da conta</label>
                            <select placeholder="Selecione o dono da conta..." name="Comprador" id="Comprador" class="form-control" ng-model="viewdata.conta.Periodicidade">
                                <option value="">---Selecione---</option>
                                <option value="Unica">Unica</option>
                                <option value="Ocasional">Ocasional</option>
                                <option value="Mensal">Mensal</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4 col-lg-3">
                            <button type="submit" class="btn btn-primary form-control" ng-click="validaForm(cadConta) && salvarConta()">Salvar</button>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
