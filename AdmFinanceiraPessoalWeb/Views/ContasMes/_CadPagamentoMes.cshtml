
@{
    ViewBag.Title = "_CadPagamentoMes";
}

<div class="modal fade" id="formCadPagamento">
    <div class="modal-dialog">
        <div class="modal-content">
            <form name="cadPagamento" ng-validate="{}">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Cadastro de Pagamento de {{viewdata.pagamento.IdContaMes.Descricao}}</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-sm-6 col-md-6 col-lg-6">
                            <label>Valor</label>
                            <input type="number" step="0.05" class="form-control required" name="Valor" ng-model="viewdata.pagamento.Valor" />
                        </div>
                        <div class="form-group col-sm-6 col-md-6 col-lg-6">
                            <label>Pago Em:</label>
                            <input type="date" class="form-control required" name="DataRegPagamento" ng-model="viewdata.pagamento.DtPagamento" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4 col-lg-3">
                            <button type="submit" class="btn btn-primary form-control" ng-click="validaForm(cadPagamento) && salvarPagamento()">Salvar</button>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
