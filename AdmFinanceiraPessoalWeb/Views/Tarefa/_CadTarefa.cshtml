
@{
    ViewBag.Title = "_CadTarefa";
}

<div class="modal fade" id="formCadTarefa">
    <div class="modal-dialog">
        <div class="modal-content">
            <form name="cadTarefa" ng-validate="{}">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Cadastro de Tarefa</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-sm-6 col-md-6 col-lg-6">
                            <label>NomeTarefa</label>
                            <input type="text" class="form-control required" name="Descricao" ng-model="viewdata.tarefa.NomeTarefa" />
                        </div>
                        <div class="form-group col-sm-6 col-md-6 col-lg-6">
                            <label>Prazo final</label>
                            <input type="date" class="form-control required" name="DataPagamento" ng-model="viewdata.tarefa.DtFim" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-6 col-md-6 col-lg-6">
                            <label>Prioridade</label>
                            <input type="number" class="form-control required" name="Valor" ng-model="viewdata.tarefa.Prioridade" />
                        </div>
                        <div class="form-group col-sm-6 col-md-6 col-lg-6">
                            <label>Duração</label>
                            <input type="time" class="form-control required" placeholder="HH:mm" name="Duracao" ng-model="viewdata.tarefa.DuracaoEstimada" />
                        </div>                        
                    </div>
                    <div class="row" ng-show="viewdata.tarefa.Status">
                        <div class="form-group col-sm-6 col-md-6 col-lg-6">
                            <label>Duração</label>
                            <select placeholder="Selecione o dono da conta..." name="Comprador" id="Comprador" class="form-control" ng-model="viewdata.tarefa.Status">
                                <option value="">---Selecione---</option>
                                <option selected value="Nova">Nova</option>
                                <option value="Concluida">Concluida</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4 col-lg-3">
                            <button type="submit" class="btn btn-primary form-control" ng-click="validaForm(cadTarefa) && salvarTarefa()">Salvar</button>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>